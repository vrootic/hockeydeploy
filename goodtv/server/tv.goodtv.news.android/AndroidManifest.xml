<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tv.goodtv.news"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon1"
        android:label="@string/app_name"
        android:logo="@drawable/logo"
        android:theme="@style/AppTheme" >
        <activity
            android:name="tv.goodtv.news.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tv.goodtv.news.BookActivity"
            android:label="@string/app_name"

            android:parentActivityName="tv.goodtv.news.BookShelfActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="tv.goodtv.news.ChapterActivity"
            android:label="@string/app_name"
            android:parentActivityName="tv.goodtv.news.BookActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="tv.goodtv.news.BookShelfActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:parentActivityName="tv.goodtv.news.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="tv.goodtv.news.DedicateActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:parentActivityName="tv.goodtv.news.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="tv.goodtv.news.BookmarkActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:parentActivityName="tv.goodtv.news.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity android:name="com.facebook.LoginActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="tv.goodtv.news.InfoActivity"
            android:label="@string/app_name"
            android:parentActivityName="tv.goodtv.news.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>
